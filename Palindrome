#WAP a progrma to check if the no is palindrome

def pal (num):
	x1 = num[: : -1]
	if x1 == num :
		print("palindrome")
	else:
		print('not a palindrome')

print(pal('madam'))

#WAP to find the factorial of a no

def fact(num):
	if num == 1:
		return num 
	else:
		return num * fact(num - 1)
print(fact(4))
